<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/nearest_error"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/t_layout_flights">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/airline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <TextView
                    android:text="@string/arrival_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"/>
            <TextView
                    android:text="@string/departure_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
            <TextView
                    android:text="@string/scheduled_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"/>

        </TableRow>
    </TableLayout>

</LinearLayout>